<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_shape"
    android:gravity="center_horizontal"
    android:minWidth="200dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="确定要删除恢复？" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#c7c7c7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <Button
            android:id="@+id/dialog_left_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:maxLines="1"
            android:text="取消"
            android:textColor="@drawable/dialog_cancel_color_slct" />

        <View
            android:id="@+id/dialog_line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#c7c7c7" />

        <Button
            android:id="@+id/dialog_right_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:maxLines="1"
            android:text="确定"
            android:textColor="@drawable/dialog_ok_color_slct" />
    </LinearLayout>

</LinearLayout>