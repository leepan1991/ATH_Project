<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_bg"
    android:orientation="vertical">

    <include layout="@layout/view_actionbar_menu" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/rltContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">


            <LinearLayout
                android:id="@+id/lltContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="38dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvQustionOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:maxLines="1"
                    android:text="问题一：" />

                <Spinner
                    android:id="@+id/spQustionOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:entries="@array/passwd_question"></Spinner>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tvAnswerOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:maxLines="1"
                        android:text="答案：" />

                    <EditText
                        android:id="@+id/etSinglePasswdOne"
                        style="@style/mLoginEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/tvAnswerOne"
                        android:background="@drawable/register_phone_input"
                        android:inputType="text"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:textColor="@color/font_333333"
                        android:textColorHint="#DDDEDE"
                        android:textSize="14sp" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/tvQustionTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="20dp"
                    android:maxLines="1"
                    android:text="问题二：" />

                <Spinner
                    android:id="@+id/spQustionTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:entries="@array/passwd_question"></Spinner>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tvAnswerTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:maxLines="1"
                        android:text="答案：" />

                    <EditText
                        android:id="@+id/etSinglePasswdTwo"
                        style="@style/mLoginEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/tvAnswerTwo"
                        android:background="@drawable/register_phone_input"
                        android:inputType="text"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:textColor="@color/font_333333"
                        android:textColorHint="#DDDEDE"
                        android:textSize="14sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tvQustionThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="20dp"
                    android:maxLines="1"
                    android:text="问题三：" />

                <Spinner
                    android:id="@+id/spQustionThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:entries="@array/passwd_question"></Spinner>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tvAnswerThree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:maxLines="1"
                        android:text="答案：" />

                    <EditText
                        android:id="@+id/etSinglePasswdThree"
                        style="@style/mLoginEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/tvAnswerThree"
                        android:background="@drawable/register_phone_input"
                        android:inputType="text"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:textColor="@color/font_333333"
                        android:textColorHint="#DDDEDE"
                        android:textSize="14sp" />

                </RelativeLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btnConfirm"
                style="@style/mBt"
                android:layout_width="208dp"
                android:layout_height="36dp"
                android:layout_below="@id/lltContent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/register_btn"
                android:onClick="onClick"
                android:text="确认"
                android:textSize="16dp" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>