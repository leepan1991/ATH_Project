<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    android:orientation="vertical">

    <include layout="@layout/view_actionbar_menu" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/rltContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lltTop"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/order_buy_avator_bg"
                android:gravity="center"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/rltLogined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivLoginAvatar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/mine_avatar" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/lltSign"
                        android:layout_toRightOf="@+id/ivLoginAvatar"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:maxLines="1"
                                android:text="无言的结局"
                                android:textColor="@color/font_666666"
                                android:textSize="16sp"

                                />

                            <ImageView
                                android:id="@+id/ivRealed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:contentDescription="@string/app_name"
                                android:scaleType="fitXY"
                                android:src="@drawable/mine_realnamed" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvwCoinValue"
                            android:layout_width="213dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="总积分：188****2343"
                            android:textColor="@color/font_666666"
                            android:textSize="10sp" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lltContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lltTop"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rltRealCertification"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:background="@android:color/white">


                    <TextView
                        android:id="@+id/tvRealCertification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:maxLines="1"
                        android:paddingLeft="27dp"
                        android:text="实名认证"
                        android:textColor="#A7A7A7"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/tvCertificationStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/ivRealCertification"
                        android:maxLines="1"
                        android:text="已认证"
                        android:textColor="#A7A7A7"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/ivRealCertification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="27dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/mine_right_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/safety_management_dash_line" />

                <RelativeLayout
                    android:id="@+id/rltMobileBinding"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:background="@android:color/white">

                    <TextView
                        android:id="@+id/tvMobileBinding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:maxLines="1"
                        android:paddingLeft="27dp"
                        android:text="手机绑定/更换"
                        android:textColor="#A7A7A7"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/tvMobileNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/ivMobileBinding"
                        android:maxLines="1"
                        android:text="188****4234"
                        android:textColor="#A7A7A7"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/ivMobileBinding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="27dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/mine_right_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/safety_management_dash_line" />

                <RelativeLayout
                    android:id="@+id/rltSinglePasswd"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:background="@android:color/white">

                    <TextView
                        android:id="@+id/tvSinglePasswd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:maxLines="1"
                        android:paddingLeft="27dp"
                        android:text="交易密码设置/更改"
                        android:textColor="#A7A7A7"
                        android:textSize="14sp" />


                    <ImageView
                        android:id="@+id/ivSinglePasswd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="27dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/mine_right_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/safety_management_dash_line" />

                <RelativeLayout
                    android:id="@+id/rltLoginPasswd"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:background="@android:color/white">

                    <TextView
                        android:id="@+id/tvLoginPasswd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:maxLines="1"
                        android:paddingLeft="27dp"
                        android:text="登录密码修改"
                        android:textColor="#A7A7A7"
                        android:textSize="14sp" />


                    <ImageView
                        android:id="@+id/ivLoginPasswd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="27dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/mine_right_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/safety_management_dash_line" />

                <RelativeLayout
                    android:id="@+id/rltSettingPwd"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:background="@android:color/white"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvSettingPwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:maxLines="1"
                        android:paddingLeft="27dp"
                        android:text="设置密保问题"
                        android:textColor="#A7A7A7"
                        android:textSize="14sp" />


                    <ImageView
                        android:id="@+id/ivSettingPwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="27dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/mine_right_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/safety_management_dash_line"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnBack"
                    style="@style/mBt"
                    android:layout_width="209dp"
                    android:layout_height="36dp"
                    android:layout_below="@id/rlt_fun"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/login_btn"
                    android:onClick="onClick"
                    android:text="返回"
                    android:textSize="16dp"
                    android:visibility="invisible" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>