<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="281dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_shape"
    android:gravity="center_horizontal"
    android:minWidth="250dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="确定要删除恢复？"
        android:textColor="@android:color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="#c7c7c7" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/order_buy_input">

        <TextView
            android:id="@+id/dgSDSD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="ATH"
            android:textColor="@color/font_333333" />

        <ImageView
            android:id="@+id/iv_zhang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dgSDSD"
            android:paddingLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/order_buy_hor_line" />


        <EditText
            android:id="@+id/edtSDSD"
            style="@style/mLoginEt"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_zhang"
            android:background="@android:color/transparent"
            android:hint="请输入ATH数量"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textColor="@color/font_333333"
            android:textColorHint="#DCDDDD"
            android:textSize="14sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/order_buy_input">

        <TextView
            android:id="@+id/dgScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="积分"
            android:textColor="@color/font_333333" />

        <ImageView
            android:id="@+id/iv_Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dgScore"
            android:paddingLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/order_buy_hor_line" />


        <EditText
            android:id="@+id/edtScore"
            style="@style/mLoginEt"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_Score"
            android:background="@android:color/transparent"
            android:hint="请输入积分数量"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textColor="@color/font_333333"
            android:textColorHint="#DCDDDD"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/edtUCode"
            style="@style/mLoginEt"
            android:layout_width="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btnCode"
            android:background="@drawable/register_code_input"
            android:hint="输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:textColor="@color/font_333333"
            android:textColorHint="#DDDEDE"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnCode"
            style="@style/mBt"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/register_get_code_btn"
            android:maxLines="1"
            android:onClick="onClick"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="获取验证码"
            android:textColor="@android:color/white"
            android:textSize="11sp" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#c7c7c7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <Button
            android:id="@+id/dialog_left_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:maxLines="1"
            android:text="取消"
            android:textColor="@drawable/dialog_cancel_color_slct" />

        <View
            android:id="@+id/dialog_line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#c7c7c7" />

        <Button
            android:id="@+id/dialog_right_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:maxLines="1"
            android:text="确定"
            android:textColor="@drawable/dialog_ok_color_slct" />
    </LinearLayout>

</LinearLayout>