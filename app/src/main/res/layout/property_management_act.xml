<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nor_white"
    android:orientation="vertical">

    <include layout="@layout/view_actionbar_menu" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/rltContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lltTop"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/order_buy_avator_bg"
                android:gravity="center"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/rltLogined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/ivLoginAvatar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/mine_avatar" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/lltSign"
                        android:layout_toRightOf="@+id/ivLoginAvatar"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:maxLines="1"
                                android:text="无言的结局"
                                android:textColor="@color/font_666666"
                                android:textSize="16sp"

                                />

                            <ImageView
                                android:id="@+id/ivRealed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:contentDescription="@string/app_name"

                                android:scaleType="fitXY"
                                android:src="@drawable/mine_realnamed" />

                            <TextView
                                android:id="@+id/tvRealNamed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:maxLines="1"
                                android:text="已实名认证"
                                android:textColor="#F08519"
                                android:textSize="10sp"

                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvATHAll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="ATH总量：5236238"
                                android:textColor="#F08519"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/tvMarketAll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="市场估值：1233445元"
                                android:textColor="#5CCFEC"
                                android:textSize="10sp" />

                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btnHelp"
                style="@style/mBt"
                android:layout_width="73dp"
                android:layout_height="25dp"
                android:layout_below="@id/lltTop"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"
                android:background="@drawable/property_management_zhuli"
                android:onClick="onClick"
                android:text="助力值"
                android:textSize="16dp" />

            <View
                android:id="@+id/vDashLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/btnHelp"
                android:layout_marginTop="10dp"
                android:background="@drawable/property_management_dash_line" />

            <LinearLayout
                android:id="@+id/lltPeople"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_below="@+id/vDashLine"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="邀请人数"
                        android:textColor="#5CCFEC"
                        android:visibility="gone"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvDirectInvitePeople"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="12"
                        android:textColor="@color/font_333333"
                        android:textSize="13sp" />
                </LinearLayout>

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_weight="1"-->
                <!--android:gravity="center"-->
                <!--android:orientation="vertical">-->

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:maxLines="1"-->
                <!--android:text="间接邀请人数"-->
                <!--android:textColor="#5CCFEC"-->
                <!--android:textSize="15sp" />-->

                <!--<TextView-->
                <!--android:id="@+id/tvDashInvitePeople"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:paddingLeft="5dp"-->
                <!--android:paddingRight="5dp"-->
                <!--android:text="12"-->
                <!--android:textColor="@color/font_333333"-->
                <!--android:textSize="13sp" />-->
                <!--</LinearLayout>-->

            </LinearLayout>

            <View
                android:id="@+id/vLine"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@+id/lltPeople"
                android:background="@drawable/property_management_line" />

            <Button
                android:id="@+id/btnCoin"
                style="@style/mBt"
                android:layout_width="85dp"
                android:layout_height="25dp"
                android:layout_below="@id/vLine"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"
                android:background="@drawable/property_management_coin"
                android:onClick="onClick"
                android:text="积分总值"
                android:textSize="16dp" />

            <View
                android:id="@+id/vDashLine2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/btnCoin"
                android:layout_marginTop="10dp"
                android:background="@drawable/property_management_dash_line" />

            <LinearLayout
                android:id="@+id/rltCoinContent"
                android:layout_width="299dp"
                android:layout_height="37dp"
                android:layout_below="@+id/vDashLine2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/property_management_dash_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCoinAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="12378344832"
                    android:textColor="@color/font_333333"
                    android:textSize="13sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnBack"
                style="@style/mBt"
                android:layout_width="209dp"
                android:layout_height="36dp"
                android:layout_below="@id/rltCoinContent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/register_btn"
                android:onClick="onClick"
                android:text="返回"
                android:textSize="16dp"
                android:visibility="invisible" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>