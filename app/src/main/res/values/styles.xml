<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme1">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.NoActionBar"></style>
    <style name="AppBaseTheme1" parent="@style/Theme.Design.NoActionBar"></style>


    <style name="mEt" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/rgb_150_150_153</item>
        <item name="background">@drawable/common_et_bg_slct</item>
        <item name="android:textColor">@color/rgb_150_150_153</item>
    </style>

    <style name="mLoginEt" parent="mEt">

        <item name="background">@drawable/common_et_login_bg_slct</item>
    </style>

    <style name="MyTablayoutstyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabBackground">@color/nor_white</item>
        <item name="tabIndicatorColor">@color/bg_banner_top</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/bg_banner_top</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/font_666666</item>
    </style>

    <style name="mBt" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@drawable/common_bt_text_color_slct</item>
        <item name="background">@drawable/common_bt_bg_slct</item>
    </style>

    <style name="mDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="mDialogSpeedValue" parent="mDialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="mDialogPic" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="background">@drawable/pic_bt_bg_slct</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

</resources>
