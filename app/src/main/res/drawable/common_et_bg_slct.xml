<?xml version="1.0" encoding="utf-8"?>
<!-- 实心粉色按钮 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="true" android:state_selected="true"><shape android:shape="rectangle">
            <solid android:color="@android:color/white"></solid>

            <stroke android:width="1dp" android:color="#F8552E"></stroke>

            <corners android:radius="5dp" />
        </shape></item>
    <item android:state_enabled="false"><shape android:shape="rectangle">
            <solid android:color="@android:color/white"></solid>

            <stroke android:width="1dp" android:color="#C7C7C7"></stroke>

            <corners android:radius="5dp" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <solid android:color="@android:color/white"></solid>

            <stroke android:width="1dp" android:color="#C7C7C7"></stroke>

            <corners android:radius="5dp" />
        </shape></item>

</selector>