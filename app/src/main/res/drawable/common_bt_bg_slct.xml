<?xml version="1.0" encoding="utf-8"?><!-- 实心粉色按钮 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_banner_top"></solid>

            <stroke android:width="1dp" android:color="@android:color/transparent"></stroke>

            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/m_disable"></solid>

            <stroke android:width="1dp" android:color="@android:color/transparent"></stroke>

            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_banner_top"></solid>

            <stroke android:width="1dp" android:color="@android:color/transparent"></stroke>

            <corners android:radius="4dp" />
        </shape>
    </item>

</selector>